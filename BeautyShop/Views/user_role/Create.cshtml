@model BeautyShop.Models.user_role

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background: #ecf0f3;
        }

        .table-form {
            display: flex;
            justify-content: center;
        }

        .from_bx {
            box-shadow: 13px 13px 20px #cbced1, -13px -13px 20px #fff;
            border-radius: 15px;
            padding: 10px 30px 30px 30px;
            width: 100%;
            margin: 25px;
        }

            .from_bx .input1 {
                padding: 5px 10px;
                box-shadow: inset 8px 8px 8px #cbced1, inset -8px -8px #fff;
                border-radius: 20px;
            }

                .from_bx .input1 input {
                    margin-left: 10px;
                    padding: 10px 0px;
                    border: none;
                    outline: none;
                    background: none;
                    font-size: 18px;
                    width: 90%;
                }

            .from_bx .input2 {
                padding: 5px 10px;
                box-shadow: inset 8px 8px 8px #cbced1, inset -8px -8px #fff;
                border-radius: 20px;
            }

                .from_bx .input2 textarea {
                    margin-left: 10px;
                    padding: 10px 0px;
                    border: none;
                    outline: none;
                    background: none;
                    font-size: 18px;
                    width: 99%;
                }

        .btn-custom {
            width: 50%;
            height: 40px;
            border-radius: 20px;
            border: none;
            outline: none;
            background: #a06cd5;
            color: #fff;
            font-weight: 500;
            font-size: 18px;
            letter-spacing: 1.3px;
            cursor: pointer;
            box-shadow: 3px 3px 3px #b1b1b1, -3px -3px 3px #fff;
            transition: .3s ease-in-out;
        }

            .btn-custom:hover {
                background: #9163cb;
                color: #fff;
            }

        .btn-custom1 {
            width: 50%;
            height: 40px;
            border-radius: 20px;
            border: none;
            outline: none;
            background: #a06cd5;
            color: #fff;
            font-weight: 500;
            font-size: 18px;
            letter-spacing: 1.3px;
            cursor: pointer;
            box-shadow: 3px 3px 3px #b1b1b1, -3px -3px 3px #fff;
            transition: .3s ease-in-out;
            margin-top: 15px;
        }

            .btn-custom1:hover {
                background: #9163cb;
                color: #fff;
            }

        .save-changes {
            display: flex;
            justify-content: center;
        }
    </style>
</head>
<body>
    <div class="save-changes">
        @Html.ActionLink("Обратно", "Index", null, new { @class = "btn btn-custom1" })
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="table-form">
            <div class="from_bx">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div style="margin-bottom:20px">
                    <h6>ТИП УСЛУГИ:</h6>
                    <div class="input1">
                        <div>
                            @Html.EditorFor(model => model.role_name)
                            @Html.ValidationMessageFor(model => model.role_name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="save-changes">
                    <input type="submit" value="Добавить запись" class="btn btn-custom1" />
                </div>
            </div>
        </div>
    }
</body>
</html>
