@model BeautyShop.Models.user

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background: #ecf0f3;
        }

        .form-login {
            display: flex;
            justify-content: center;
            margin: 120px;
        }

        .from_bx {
            width: 350px;
            box-shadow: 13px 13px 20px #cbced1, -13px -13px 20px #fff;
            border-radius: 15px;
            padding: 40px 30px 30px 30px;
        }

            .from_bx .logo {
                width: 80px;
                margin: auto;
            }

                .from_bx .logo img {
                    width: 100%;
                    height: 80px;
                    border-radius: 50%;
                    box-shadow: 0px 0px 3px #5f5f5f, 0px 0px 0px 5px #ecf0f3, 8px 8px 15px #a7aaa7, -8px -8px 15px #fff;
                }

            .from_bx .name {
                font-weight: 600;
                color: #555;
                font-size: 1.4rem;
                letter-spacing: 1.3px;
                text-align: center;
                margin: 20px 0px 30px 0px;
            }

            .from_bx .input1 {
                padding: 5px 10px;
                box-shadow: inset 8px 8px 8px #cbced1, inset -8px -8px #fff;
                border-radius: 20px;
                margin-top: 20px;
                z-index: 1;
            }

                .from_bx .input1 input {
                    width: 80%;
                    margin-left: 10px;
                    padding: 10px 0px;
                    border: none;
                    outline: none;
                    background: none;
                    font-size: 18px;
                }

            .from_bx .btn-custom {
                width: 100%;
                height: 40px;
                border-radius: 20px;
                border: none;
                outline: none;
                background: #a06cd5;
                color: #fff;
                font-weight: 500;
                font-size: 18px;
                letter-spacing: 1.3px;
                cursor: pointer;
                margin-top: 30px;
                box-shadow: 3px 3px 3px #b1b1b1, -3px -3px 3px #fff;
                transition: .3s ease-in-out;
                margin-left:5px;
            }

                .from_bx .btn-custom:hover {
                    background: #9163cb;
                }

            .from_bx h5 {
                width: 100%;
                text-align: center;
                margin-top: 20px;
            }

                .from_bx h5 a {
                    text-decoration: none;
                    font-size: 1rem;
                    color: #a06cd5;
                    transition: .3s linear;
                }

                    .from_bx h5 a:hover {
                        color: #9163cb;
                    }
    </style>
</head>
<body>
    <div class="form-login">
        <div class="from_bx">
            <div class=" logo"><img src="~/image/paw.png" alt="logo" /></div>
            <div class="name">KAWAICAT</div>
            @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="input1">
                    @Html.TextBoxFor(m => m.fio, "", new { @class = "form-control", @placeholder = "ФИО" })
                    @Html.ValidationMessageFor(m => m.fio, "", new { @class = "badge badge-danger" })
                </div>
                <div class="input1">
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.user_email, "", new { @class = "form-control", @placeholder = "Email" })
                        @Html.ValidationMessageFor(m => m.user_email, "", new { @class = "badge badge-danger" })
                        @if (ViewBag.error != null)
                        {
                            <span class="badge badge-danger">@ViewBag.error</span>
                        }
                    </div>
                </div>
                <div class="input1">
                    <div class="form-group">
                        @Html.PasswordFor(m => m.user_password, new { @class = "form-control", @placeholder = "Пароль" })
                        @Html.ValidationMessageFor(m => m.user_password, "", new { @class = "badge badge-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" name="submit" class="btn btn-custom" value="Зарегестрироваться" />
                </div>
            }
        </div>
    </div>
</body>
</html> 